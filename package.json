{
  "name": "chocomint",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "killport": "kill-port --port 3000,5000,8080",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{.ts,.js,tsx,jsx,json,md,sol}\"",
    "lint": "yarn workspace frontend lint",
    "test": "yarn workspace contracts test",
    "predev": "yarn killport",
    "dev": "run-p dev:*",
    "dev:run-localchain": "yarn workspace contracts run-localchain",
    "dev:deploy-contract-to-localchain": "wait-on http://localhost:8545 && yarn workspace contracts deploy-contract-to-localchain",
    "dev:frontend": "wait-on http://localhost:8545 && cross-env REACT_APP_NETWORK_ID=localhost yarn workspace frontend dev",
    "dev:firestore": "firebase emulators:start --only firestore",
    "build": "yarn workspace frontend build",
    "build:staging": "cross-env REACT_APP_NETWORK_ID=rinkeby yarn build",
    "build:production": "cross-env REACT_APP_NETWORK_ID=mainnet yarn build",
    "start:staging": "yarn build:staging && firebase emulators:start --only hosting",
    "start:production": "yarn build:production && firebase emulators:start --only hosting",
    "deploy:staging": "firebase deploy --only hosting:staging",
    "deploy:production": "firebase deploy --only hosting:production",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/**"
  ],
  "resolutions": {
    "multicodec": "2.0.0",
    "cids": "1.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "firebase": "^8.2.9",
    "firebase-tools": "^9.5.0",
    "husky": "^5.1.3",
    "kill-port": "^1.6.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^5.2.1"
  }
}
