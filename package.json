{
  "name": "chocomint",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "format": "prettier --ignore-path .gitignore --write \"**/*.{.ts,.js,tsx,jsx,json,md,sol}\"",
    "lint": "yarn workspace frontend lint",
    "test": "yarn workspace contracts test",
    "dev": "run-p dev:*",
    "dev:run-localchain": "yarn workspace contracts run-localchain",
    "dev:deploy-contract-to-localchain": "wait-on http://localhost:8545 && yarn workspace contracts deploy-contract-to-localchain",
    "dev:frontend": "wait-on http://localhost:8545 && yarn workspace frontend dev",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/**"
  ],
  "resolutions": {
    "multicodec": "2.0.0",
    "cids": "1.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "husky": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "wait-on": "^5.2.1"
  }
}
